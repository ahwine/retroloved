# ========================================
# RetroLoved .gitignore
# ========================================

# ===== Vendor & Dependencies =====
vendor/
node_modules/
composer.phar

# ===== Config Files (Sensitive) =====
# Uncomment jika tidak ingin commit config
# config/database.php
# config/email.php

# ===== User Uploaded Files =====
assets/images/products/*
!assets/images/products/.gitkeep
assets/images/profiles/*
!assets/images/profiles/.gitkeep

# ===== Backup Files =====
backup/*.sql
!backup/.gitkeep

# ===== Logs =====
*.log
logs/
error_log
php_error.log

# ===== Temporary Files =====
*.tmp
*.temp
*.cache
*.swp
*.swo
*~

# ===== OS Generated Files =====
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# ===== IDE & Editor Files =====
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
*.code-workspace

# ===== PHP Storm =====
.phpstorm.meta.php
_ide_helper.php

# ===== Composer =====
composer.lock

# ===== Environment Files =====
.env
.env.local
.env.*.local

# ===== Test Files =====
test-*.php
debug-*.php
*-test.php
*-debug.php

# ===== Documentation (Optional) =====
# Uncomment jika tidak ingin commit dokumentasi development
# ANALISIS-*.md
# PERBAIKAN-*.md
# FIX-*.md
# CARA-*.md
# CLEANUP-*.md

# ===== Cleanup Scripts (Optional) =====
# Uncomment jika tidak ingin commit cleanup scripts
# cleanup-files.bat
# reset-database.bat
# reset-database.sql
# reset-database-safe.sql
